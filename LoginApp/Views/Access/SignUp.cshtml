@model LoginApp.ViewModels.UserVM;
@{
    Layout = null;
}
<html>
    <head>
        <title>SignUp</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Sign Up
                    </div>
                    <div class="card-body">
                        <form asp-controller="Access" asp-action="SignUp" method="post">
                            <input class="form-control mb3" type="text" placeholder="FullName" required asp-for="FullName" />
                            <input class="form-control mb3" type="text" placeholder="Email" required asp-for="Email" />
                            <input class="form-control mb3" type="password" placeholder="Password" required asp-for="Password" />
                            <input class="form-control mb3" type="password" placeholder="Confirm Password" required asp-for="ConfirmPassword" />
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-primary" type="submit">Sign Up</button>
                            </div>

                        @if (ViewData["Mensaje"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Mensaje"]
                            </div>
                        }
                        ¿Ya tiene cuenta? <a asp-controller="Access" asp-action="LogIn">Log In</a>
                    </form>
                    </div>
                </div>
            </div>

        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>